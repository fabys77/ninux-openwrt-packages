config olsrd
	# uncomment the following line to use a custom config file instead:
	#option config_file '/etc/olsrd.conf'

        #option IpVersion '6and4'
        # Do not use 6and4 until this ticket is solved: https://dev.openwrt.org/ticket/4803
        option IpVersion '4'

config LoadPlugin
	option library 'olsrd_arprefresh.so.0.1'

config LoadPlugin
	option library 'olsrd_mdns.so.1.0.0'
	option "NonOlsrIf"  "eth0"

config LoadPlugin
	option library 'olsrd_httpinfo.so.0.1'
	option port '1978'
	list Net '0.0.0.0 0.0.0.0'

config LoadPlugin
	option library 'olsrd_nameservice.so.0.3'

config LoadPlugin
	option library 'olsrd_txtinfo.so.0.1'
	option accept '0.0.0.0'

config 'LoadPlugin'
	option 'library' 'olsrd_dot_draw.so.0.3'
	option 'accept' '0.0.0.0'


config Interface
	list interface 'ninuxif'

config 'Hna4'
	option 'netaddr' '192.168.1.0'
	option 'netmask' '255.255.255.0'

#config 'Hna6'
#	option 'netaddr' '2002::'
#	option 'prefix' '64'
