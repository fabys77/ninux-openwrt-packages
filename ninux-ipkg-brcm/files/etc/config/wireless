config wifi-device  wl0
	option type     broadcom
	option channel	'3'
	option disabled	'0'

	# REMOVE THIS LINE TO ENABLE WIFI:

config wifi-iface
	option device   wl0
	option network	'ninuxif'
	option mode	'adhoc'
	option ssid	'ninux.org'
	option encryption none
	option hidden	'0'
	option isolate	'0'
	option bgscan	'0'
	option wds	'0'

